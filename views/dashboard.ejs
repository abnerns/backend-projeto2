<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Dashboard - Sistema MVC' %></title>
    
    <!-- CSS Principal -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/dashboard.css">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Font Awesome para √≠cones -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="dashboard-page">
    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="logo">
                <i class="fas fa-shield-alt"></i>
                <span>Sistema MVC</span>
            </div>
            <button class="sidebar-toggle" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>
        </div>

        <nav class="sidebar-nav">
            <ul>
                <li class="nav-item active">
                    <a href="/dashboard" class="nav-link">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fas fa-user"></i>
                        <span>Perfil</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fas fa-cog"></i>
                        <span>Configura√ß√µes</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fas fa-chart-bar"></i>
                        <span>Relat√≥rios</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fas fa-users"></i>
                        <span>Usu√°rios</span>
                    </a>
                </li>
            </ul>
        </nav>

        <div class="sidebar-footer">
            <div class="user-info">
                <div class="user-avatar">
                    <i class="fas fa-user-circle"></i>
                </div>
                <div class="user-details">
                    <span class="user-name"><%= user.username %></span>
                    <span class="user-email"><%= user.email %></span>
                </div>
            </div>
            <a href="/logout" class="logout-btn" onclick="return confirmLogout()">
                <i class="fas fa-sign-out-alt"></i>
                <span>Sair</span>
            </a>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Header -->
        <header class="main-header">
            <div class="header-left">
                <button class="mobile-menu-btn" id="mobileMenuBtn">
                    <i class="fas fa-bars"></i>
                </button>
                <h1>Dashboard</h1>
            </div>
            <div class="header-right">
                <div class="header-actions">
                    <button class="action-btn" title="Notifica√ß√µes">
                        <i class="fas fa-bell"></i>
                        <span class="badge">3</span>
                    </button>
                    <button class="action-btn" title="Mensagens">
                        <i class="fas fa-envelope"></i>
                        <span class="badge">5</span>
                    </button>
                    <div class="user-menu">
                        <button class="user-menu-btn" id="userMenuBtn">
                            <i class="fas fa-user-circle"></i>
                            <span><%= user.username %></span>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        <div class="user-dropdown" id="userDropdown">
                            <a href="#" class="dropdown-item">
                                <i class="fas fa-user"></i>
                                Perfil
                            </a>
                            <a href="#" class="dropdown-item">
                                <i class="fas fa-cog"></i>
                                Configura√ß√µes
                            </a>
                            <div class="dropdown-divider"></div>
                            <a href="/logout" class="dropdown-item" onclick="return confirmLogout()">
                                <i class="fas fa-sign-out-alt"></i>
                                Sair
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <!-- Notifica√ß√µes -->
        <div id="notifications" class="notifications-container">
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="notification error show" data-type="error">
                    <i class="fas fa-exclamation-circle"></i>
                    <span><%= error %></span>
                    <button class="close-btn" onclick="closeNotification(this)">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            <% } %>
            
            <% if (typeof success !== 'undefined' && success) { %>
                <div class="notification success show" data-type="success">
                    <i class="fas fa-check-circle"></i>
                    <span><%= success %></span>
                    <button class="close-btn" onclick="closeNotification(this)">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            <% } %>
        </div>

        <!-- Dashboard Content -->
        <div class="dashboard-content">
            <!-- Welcome Section -->
            <section class="welcome-section">
                <div class="welcome-card">
                    <div class="welcome-content">
                        <h2>Bem-vindo, <%= user.username %>! üëã</h2>
                        <p>Voc√™ est√° logado no sistema MVC. Esta √© uma p√°gina protegida que s√≥ pode ser acessada ap√≥s autentica√ß√£o.</p>
                        <div class="welcome-stats">
                            <div class="stat">
                                <i class="fas fa-calendar"></i>
                                <span>√öltimo acesso: <%= stats.sessionStart %></span>
                            </div>
                            <div class="stat">
                                <i class="fas fa-clock"></i>
                                <span>Hora atual: <%= stats.currentTime %></span>
                            </div>
                        </div>
                    </div>
                    <div class="welcome-illustration">
                        <i class="fas fa-chart-line"></i>
                    </div>
                </div>
            </section>

            <!-- Stats Cards -->
            <section class="stats-section">
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="fas fa-users"></i>
                        </div>
                        <div class="stat-content">
                            <h3><%= stats.totalUsers %></h3>
                            <p>Total de Usu√°rios</p>
                            <span class="stat-change positive">
                                <i class="fas fa-arrow-up"></i>
                                +12%
                            </span>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="fas fa-chart-bar"></i>
                        </div>
                        <div class="stat-content">
                            <h3>1,234</h3>
                            <p>Visualiza√ß√µes</p>
                            <span class="stat-change positive">
                                <i class="fas fa-arrow-up"></i>
                                +8%
                            </span>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="fas fa-shopping-cart"></i>
                        </div>
                        <div class="stat-content">
                            <h3>567</h3>
                            <p>Vendas</p>
                            <span class="stat-change negative">
                                <i class="fas fa-arrow-down"></i>
                                -3%
                            </span>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="fas fa-dollar-sign"></i>
                        </div>
                        <div class="stat-content">
                            <h3>R$ 12.345</h3>
                            <p>Receita</p>
                            <span class="stat-change positive">
                                <i class="fas fa-arrow-up"></i>
                                +15%
                            </span>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Charts Section -->
            <section class="charts-section">
                <div class="charts-grid">
                    <div class="chart-card">
                        <div class="chart-header">
                            <h3>Atividade Recente</h3>
                            <div class="chart-actions">
                                <button class="chart-btn active" data-period="7d">7d</button>
                                <button class="chart-btn" data-period="30d">30d</button>
                                <button class="chart-btn" data-period="90d">90d</button>
                            </div>
                        </div>
                        <div class="chart-content">
                            <canvas id="activityChart" width="400" height="200"></canvas>
                        </div>
                    </div>

                    <div class="chart-card">
                        <div class="chart-header">
                            <h3>Distribui√ß√£o por Categoria</h3>
                        </div>
                        <div class="chart-content">
                            <canvas id="categoryChart" width="400" height="200"></canvas>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Recent Activity -->
            <section class="activity-section">
                <div class="activity-card">
                    <div class="activity-header">
                        <h3>Atividades Recentes</h3>
                        <button class="view-all-btn">Ver todas</button>
                    </div>
                    <div class="activity-list">
                        <div class="activity-item">
                            <div class="activity-icon">
                                <i class="fas fa-user-plus"></i>
                            </div>
                            <div class="activity-content">
                                <p><strong>Novo usu√°rio registrado</strong></p>
                                <span class="activity-time">2 minutos atr√°s</span>
                            </div>
                        </div>
                        <div class="activity-item">
                            <div class="activity-icon">
                                <i class="fas fa-file-alt"></i>
                            </div>
                            <div class="activity-content">
                                <p><strong>Relat√≥rio gerado</strong></p>
                                <span class="activity-time">15 minutos atr√°s</span>
                            </div>
                        </div>
                        <div class="activity-item">
                            <div class="activity-icon">
                                <i class="fas fa-cog"></i>
                            </div>
                            <div class="activity-content">
                                <p><strong>Configura√ß√µes atualizadas</strong></p>
                                <span class="activity-time">1 hora atr√°s</span>
                            </div>
                        </div>
                        <div class="activity-item">
                            <div class="activity-icon">
                                <i class="fas fa-shield-alt"></i>
                            </div>
                            <div class="activity-content">
                                <p><strong>Backup realizado</strong></p>
                                <span class="activity-time">3 horas atr√°s</span>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>

    <!-- JavaScript -->
    <script src="/js/main.js"></script>
    <script src="/js/dashboard.js"></script>
</body>
</html>

